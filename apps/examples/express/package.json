{
  "name": "express-auth-app",
  "version": "1.0.0",
  "type": "module",
  "description": "Express + Auth.js Developer app",
  "main": "server.js",
  "private": true,
  "scripts": {
    "start": "node --experimental-fetch --experimental-global-webcrypto --experimental-specifier-resolution=node dist/server.js",
    "build": "pnpm build:ts && pnpm build:css",
    "build:watch": "pnpm build:ts:watch & pnpm build:css:watch",
    "build:ts": "tsc",
    "build:ts:watch": "tsc -w",
    "build:css": "tailwindcss -i ./public/css/style.css -o ./public/css/output.css",
    "build:css:watch": "pnpm build:css -w",
    "e2e:prepare": "playwright install",
    "e2e": "playwright test",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"pnpm run build:watch\" \"pnpm run dev:node\"",
    "dev:node": "nodemon --experimental-fetch --experimental-global-webcrypto dist/server.js",
    "lint": "eslint src/*.ts",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier src/*.ts",
    "prettier:fix": "pnpm prettier --write"
  },
  "author": "Rexford Essilfie <rexfordessilfie09@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@auth/core": "workspace:*",
    "@auth/express": "workspace:*",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-errors": "^1.7.1",
    "morgan": "^1.9.1",
    "pug": "^3.0.2",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@playwright/test": "1.37.1",
    "@prettier/plugin-pug": "^3.0.0",
    "@types/express": "4.17.17",
    "@types/http-errors": "1.8.2",
    "@types/morgan": "1.9.4",
    "@types/node": "14.18.53",
    "@types/pug": "^2.0.10",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "6.5.1",
    "eslint": "^8.56.0",
    "nodemon": "2.0.22",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "typescript": "5.3.3"
  }
}
