{
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "outDir": ".",
    "target": "es2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
  },
  "exclude": [
    "./*.js",
    "./*.d.ts",
    "app",
    "types",
    "**/tests",
    "**/__tests__",
    "config",
    "www"
  ]
}
